extends layout
block content
    span.price(style={display: 'none'})= price 
    span.user(style={display: 'none'})= user

    if user 
        div(class="container py-4")
            div.row
                div.col-md-3
                div.col-md-6
                    div.container
                        form(action='/signup')
                            div.row.border-bottom.border-info.mb-3
                                div.col-3
                                    i(class="fa-solid fa-book text-primary")
                                        span.ps-2 Exam
                                div.col-9 
                                    input(style="width: 100%; background-color: #fff; border: none;" type='text' class='text-capitalize' name='exam' value=exam disabled)
                            div.row.border-bottom.border-info.mb-3
                                div.col-3
                                    i(class="fa-solid fa-user text-primary")
                                        span.ps-2 Name
                                div.col-9 
                                    input(style="width: 100%; background-color: #fff; border: none;" type='text' class='text-capitalize' name='name' value=user.name disabled)
                            div.row.border-bottom.border-info.mb-3
                                div.col-3
                                    i(class="fa-solid fa-at text-primary")
                                        span.ps-2 Email
                                div.col-9 
                                    input(style="width: 100%; background-color: #fff; border: none;" type='text' name='name' value=user.email disabled)
                            div.row.border-bottom.border-info.mb-3
                                div.col-3
                                    i(class="fa-solid fa-indian-rupee-sign text-primary")
                                        span.ps-2 Price
                                div.col-9 
                                    input(style="width: 100%; background-color: #fff; border: none;" type='text' name='name' value=price disabled)
                            div.row 
                                div.col
                                    button(class="btn btn-primary w-100  text-uppercase") Confirm and Pay
                col-md-3
    else 
        div(class='container-xxl py-4 bg-white')
            div(class='container')
                div(class='row g-4')
                    div(class='col-md-6 d-flex flex-column align-items-center')
                        img(class="flex-shrink-0 img-fluid" src="/images/registrationLogoi.png" alt="")
                        h6(class="mb-3 text-uppercase") Already a registered applicant
                        a(class="btn btn-primary" href="/loginandpay/"+exam+"/"+price) Login Now

                    div(class='col-md-6 d-flex flex-column align-items-center')
                        h5(class='text-uppercase') Register Now
                        div(class="container")
                            form(action='/signup')
                                input(type='hidden' name='exam' value=exam)
                                div(class="inputContainer")
                                    input(type="text" class="input" name="name" required)
                                    span(class="label") Name
                                    i(class="fa-solid fa-user iconRegister text-primary")
                                div(class="inputContainer")
                                    input(type="text" class="input" name="email" required)
                                    span(class="label") Email
                                    i(class="fa-solid fa-at iconRegister text-primary")
                                div.email.error
                                div(class="inputContainer")
                                    input(type="tel" class="input" name="phone" required onkeypress="return number_key(event)")
                                    span(class="label") Phone
                                    i(class="fa-solid fa-phone iconRegister text-primary")
                                div.phone.error
                                div(class="inputContainer")
                                    input(type="password" class="input password" name="password" required)
                                    span(class="label") Password
                                    i(class="fa-solid fa-key iconRegister text-primary")
                                div(class="inputContainer")
                                    input(type="password" class="input confirmPassword" name="confirmPassword" required)
                                    span(class="label") Confirm Password
                                    i(class="fa-solid fa-key iconRegister text-primary")
                                div.password.error
                                div.inputContainer 
                                    button(class="btn btn-primary w-100 py-2 mt-3 submitButton") Submit and Pay
    script. 
        function number_key(evt) { 
            let ASCIICode = (evt.which) ? evt.which : evt.keyCode
            if (ASCIICode < 48 || ASCIICode > 57){
                return false;
            }
            return true;
        }
        const user_span = document.querySelector('.user').textContent;
        const price_span = parseInt(document.querySelector('.price').textContent)
        const form = document.querySelector('form');
        const emailError = document.querySelector('.email.error');
        var exam = "";
        var name = "";
        var email = "";
        
        if(user_span){
            const priceError = document.querySelector('.price.error');
            const price_field = document.querySelector('.input.price');
            price_field.addEventListener('focusout', () => {
                const price = parseInt(price_field.value);
                if(price < price_span){
                    priceError.textContent = 'Nope! the price is fixed at '+price_span.toString();
                }
            });
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                // reset error
                emailError.textContent = '';
                priceError.textContent = '';

                //get form field values

                exam = (form.exam.value).trim().toLowerCase();
                name = (form.name.value).trim().toLowerCase();
                email = (form.email.value).trim().toLowerCase();
                const phone = null;
                const password = null;
                

                try{
                    const res = await fetch('/signup',{
                        method: 'POST',
                        body: JSON.stringify({exam, name, email, phone,password}),
                        headers: {'Content-Type': 'application/json'}
                    });
                    const data = await res.json();
                    if(data.errors){
                        console.log(data.errors);
                    }
                    
                    if(data.user_id){
                        location.assign('/payment/'+exam+'/'+email+'/'+price_span.toString());
                    }

                }
                catch(err){
                    console.log(err);
                }
            });

        }
        else{
            const phoneError = document.querySelector('.phone.error');
            const passwordError = document.querySelector('.password.error');
            const password = document.querySelector('.input.password');
            const confirmPassword = document.querySelector('.input.confirmPassword');
            password.addEventListener('focus', () => {
                passwordError.textContent = '';
            });
            confirmPassword.addEventListener('focus', () => {
                passwordError.textContent = '';
            })
            confirmPassword.addEventListener('focusout', () => {
                if(form.password.value !== form.confirmPassword.value){
                    passwordError.textContent = 'Passwords do not match';
                }
            });

            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                // reset error
                emailError.textContent = '';
                phoneError.textContent = '';
                passwordError.textContent = '';

                //get form field values

                exam = (form.exam.value).trim().toLowerCase();
                name = (form.name.value).trim().toLowerCase();
                email = (form.email.value).trim().toLowerCase();
                const phone = (form.phone.value).trim();
                const password = (form.password.value).trim();
                const confirmPassword = (form.confirmPassword.value).trim();
                if(password === confirmPassword)
                {
                    try{
                    const res = await fetch('/signup',{
                        method: 'POST',
                        body: JSON.stringify({exam, name, email, phone, password}),
                        headers: {'Content-Type': 'application/json'}
                    });
                    const data = await res.json();
                    if(data.errors){
                        emailError.textContent = data.errors.email;
                        phoneError.textContent = data.errors.phone;
                        passwordError.textContent = data.errors.password;
                    }
                    
                    if(data.user){
                        location.assign('/payment/'+exam+'/'+email+'/'+price_span.toString());
                    }
                    }
                    catch(err){
                        console.log(err);
                    }
                }
                else{
                    passwordError.textContent = 'Passwords do not match';
                }    
            });
        }
        
